<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h5>Foi encontrado <%= movie.errors.count%> erro: </h5>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<form>
    <div class="form-group">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class: "dark-gray-5 form-control" %>

    </div>

    <div class='grid'>
      <div class="form-group" style="margin-right: 15px;">
        <%= form.label :cover%>
        <%= form.text_field :cover, class: "dark-gray-5 form-control margin-left" %>

      </div>

      <div class="form-group">
        <%= form.label :published_at, style: "display: block" %>
        <%= form.date_field :published_at, class: "dark-gray-5 form-control", style: "color: #E5E5EA" %>
    
      </div>

      <div class="form-group" style="margin-right: 15px;">
        <%= form.label :genre_id, style: "display: block" %>
        <%= form.collection_select(:genre_id, Genre.all, :id, :name, {:prompt => "Selecione"}, class: "dark-gray-5 form-control") %>
      </div>

      <div class="form-group">
        <%= form.label :director_id, style: "display: block" %>
        <%= form.collection_select(:director_id, Director.all, :id, :name, {:prompt => "Selecione"}, class: "dark-gray-5 form-control") %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :synopsis, style: "display: block" %>
      <%= form.text_area :synopsis, class: "dark-gray-5 form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :artist_id, style: "display: block" %>
      <%= form.collection_select(:artist_id, Artist.all, :id, :name, {:prompt => "Selecione"}, class: "dark-gray-5 form-control") %>
    </div>

    <div class="btn-form-right">
      <%= link_to "Cancelar", movies_path, class: ' btn cancel decoration btn-form-margin' %>
      <%= form.submit "Salvar", class: 'btn primary'%>
    </div>
</form>
<% end %>
