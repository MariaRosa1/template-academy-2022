<div id="movies" class="d-flex mb-5 justify-content-between" >
  <h3> Filmes </h3>
  <div>
    <%= link_to "+ Novo filme", new_movie_path, class: 'btn primary decoration' %>
  </div>

</div>
<table class="table">
  <thead>
      <tr>
        <th class="col-md-3" scope="col">Título </th>
        <th class="col-md-3" scope="col">Diretor</th>
        <th class="col-md-3" scope="col">Gênero</th>
        <th class="col-md-3" scope="col">Estreia</th>
        <th class="col-md-3 align-text" scope="col">Ações</th>
      </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <%= render movie %>
    <% end %>
  </tbody>
</table>
